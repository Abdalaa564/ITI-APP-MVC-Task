@model IEnumerable<Course>
@{
    Layout = "_MyLayout";
    ViewData["Title"] = "Courses List";
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="success-alert" class="alert alert-success alert-dismissible fade show custom-alert" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<h1>Courses</h1>
@if (User.IsInRole("Admin"))
{
    <a asp-action="Create" class="btn btn-primary">Add New Course</a>
}
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Topic</th>
            <th>Degree</th>
            <th>Min Degree</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.topic</td>
                <td>@course.degree</td>
                <td>@course.minDegree</td>
                <td>@string.Join(", ", course.Departments.Select(d => d.Name))</td>
                <td>
                    <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-info">Details</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
