@model ITI_APP.Models.Course

@{
    Layout = "_MyLayout";
    ViewData["Title"] = "Course Details";
}

@if (ViewData["UserMessage"] != null)
{
    <div class="alert alert-success">
        @ViewData["UserMessage"]
    </div>
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Course Details</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Course ID:</dt>
                        <dd class="col-sm-9">@Model.Id</dd>

                        <dt class="col-sm-3">Course Name:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Topic:</dt>
                        <dd class="col-sm-9">@Model.topic</dd>

                        <dt class="col-sm-3">Total Degree:</dt>
                        <dd class="col-sm-9">@Model.degree</dd>

                        <dt class="col-sm-3">Minimum Degree:</dt>
                        <dd class="col-sm-9">@Model.minDegree</dd>

                        <dt class="col-sm-3">Department:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Departments != null && Model.Departments.Any())
                            {
                                <ul class="list-unstyled mb-0">
                                    @foreach (var dept in Model.Departments)
                                    {
                                        <li>@dept.Name</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span class="text-muted">No departments assigned</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            @if (Model.CrsResults.Any())
            {
                <div class="card mt-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">Enrolled Students (@Model.CrsResults.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Student ID</th>
                                        <th>Student Name</th>
                                        <th>Degree</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var result in Model.CrsResults)
                                    {
                                        <tr>
                                            <td>@result.Student?.Id</td>
                                            <td>@result.Student?.Name</td>
                                            <td>@result.Degree</td>
                                            <td>
                                                @if (result.Degree >= Model.minDegree)
                                                {
                                                    <span class="badge bg-success">Pass</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Fail</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card mt-4">
                    <div class="card-body text-center">
                        <i class="fas fa-users fa-2x text-muted mb-3"></i>
                        <h5>No Students Enrolled</h5>
                        <p class="text-muted">No students are currently enrolled in this course.</p>
                    </div>
                </div>
            }

            @if (Model.Instructors.Any())
            {
                <div class="card mt-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="card-title mb-0">Assigned Instructors (@Model.Instructors.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Instructor ID</th>
                                        <th>Instructor Name</th>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <th>Salary</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var instructor in Model.Instructors)
                                    {
                                        <tr>
                                            <td>@instructor.Id</td>
                                            <td>@instructor.Name</td>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <td>@instructor.Salary.ToString("C")</td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card mt-4">
                    <div class="card-body text-center">
                        <i class="fas fa-chalkboard-teacher fa-2x text-muted mb-3"></i>
                        <h5>No Instructors Assigned</h5>
                        <p class="text-muted">No instructors are currently assigned to this course.</p>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="card-title mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Edit Course
                            </a>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="fas fa-trash"></i> Delete Course
                            </button>
                        }
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">Course Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="border-end">
                                <h4 class="text-primary">@Model.CrsResults.Count</h4>
                                <small class="text-muted">Enrolled Students</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success">@Model.Instructors.Count</h4>
                            <small class="text-muted">Assigned Instructors</small>
                        </div>
                    </div>
                    <hr>
                    <div class="text-center">
                        <small class="text-muted">Passing Grade: @Model.minDegree / @Model.degree</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the course "<strong>@Model.Name</strong>"?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

