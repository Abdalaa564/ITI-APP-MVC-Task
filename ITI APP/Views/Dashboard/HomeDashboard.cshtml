@model DashboardViewModel

@{
    Layout = "_MyLayout";
    ViewData["Title"] = "Courses List";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Dashboard Overview</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="card text-bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Trainees</h5>
                    <p class="card-text display-6 text-white fs-1">@Model.Students.Count</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Instructors</h5>
                    <p class="card-text display-6 text-white fs-1">@Model.Instructors.Count</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Courses</h5>
                    <p class="card-text display-6 fs-1">@Model.Courses.Count</p>
                </div>
            </div>
        </div>
    </div>

    @* --------- *@
    <h3 class="mt-5">🏠 Department Overview - All Data</h3>

    <table class="table table-bordered table-striped text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>Department</th>
                <th>Instructor</th>
                <th>Course</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model.Departments)
            {
                var instructorsInDept = Model.Instructors.Where(i => i.DeptId == department.Id).ToList();
                bool firstDeptRow = true;

                foreach (var instructor in instructorsInDept)
                {
                    var coursesForInstructor = Model.CoursesWithColor
                    .Where(c => c.Course.Instructors.Contains(instructor))
                    .ToList();

                    bool firstInstructorRow = true;

                    foreach (var courseItem in coursesForInstructor)
                    {
                        <tr style="background-color:@(courseItem.Color == "transparent" ? "inherit" : courseItem.Color);">

                            @if (firstDeptRow)
                            {
                                <td rowspan="@instructorsInDept.Sum(i => Model.CoursesWithColor.Count(c => c.Course.Instructors.Contains(i)))">
                                    @department.Name
                                </td>
                                firstDeptRow = false;
                            }

                            @if (firstInstructorRow)
                            {
                                <td rowspan="@coursesForInstructor.Count">@instructor.Name</td>
                                firstInstructorRow = false;
                            }

                            <td>@courseItem.Course.Name</td>
                        </tr>
                    }

                    if (!coursesForInstructor.Any())
                    {
                        <tr>
                            @if (firstDeptRow)
                            {
                                <td rowspan="@instructorsInDept.Count">@department.Name</td>
                                firstDeptRow = false;
                            }
                            <td>@instructor.Name</td>
                            <td>-</td>
                        </tr>
                    }
                }

                if (!instructorsInDept.Any())
                {
                    <tr>
                        <td>@department.Name</td>
                        <td>-</td>
                        <td>-</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


<h3>All CoursesWithColor</h3>
<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Color</th>
            <th>Departments</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CoursesWithColor)
        {
            <tr style="background-color: @item.Color">
                <td>@item.Course.Name</td>
                <td>@item.Color</td>
                <td>@string.Join(", ", item.Course.Departments.Select(d => d.Name))</td>
            </tr>
        }
    </tbody>
</table>
